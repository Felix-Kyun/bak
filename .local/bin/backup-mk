#!/bin/bash

declare -a FILE=(
	"alacritty"
	"dunst"
	"i3"
	"mpd"
	"obsidian"
	"picom"
	"polybar"
	"pulse"
	"rofi"

)

CONFIG="/home/felix/.config"
SD_CONFIG="/run/media/felix/PORTABLE/backup/linux/config"
#SD_CONFIG="/home/felix/backup-tmp"
rm -rf $SD_CONFIG
mkdir $SD_CONFIG
for i in "${FILE[@]}"
do
	cp -r $CONFIG/$i/ $SD_CONFIG 
done
